<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ButterIdCheese"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/address"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giao hàng tới:"
                android:textSize="8sp"
                android:textColor="@color/neutral_4"
                android:fontFamily="@font/quicksand_bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trường Đại học Kinh tế - Luật"
                android:textColor="@color/neutral_5"
                android:textSize="10sp"
                android:fontFamily="@font/quicksand_bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView
                android:id="@+id/imv_Search"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/search"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imv_Wishlist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/love"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imv_Notification1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notification"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imv_Profile1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/userheader"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/hello"
        android:layout_marginTop="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:src="@drawable/groupkem"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imv_Main"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/chococheese"
            android:layout_marginTop="40dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có muốn thêm Cheese?"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/neutral_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginStart="24dp"
                    android:id="@+id/imv_Bag"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:src="@drawable/bag1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Túi giấy 1 cái"
                    android:textSize="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/neutral_4" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginStart="36dp"
                    android:id="@+id/imv_Box1"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:src="@drawable/box1"/>

                <TextView
                    android:layout_marginStart="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hộp kiếng 1 cái"
                    android:textSize="8dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/neutral_4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginStart="36dp"
                    android:id="@+id/imv_PaperBox6C"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:src="@drawable/boxgiay6"/>

                <TextView
                    android:layout_marginStart="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Hộp giấy 6 cái"
                    android:textSize="8dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/neutral_4"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_marginStart="36dp"
                    android:id="@+id/imv_Box6c"
                    android:layout_width="60dp"
                    android:layout_height="70dp"
                    android:src="@drawable/boxkinh6"/>

                <TextView
                    android:layout_marginStart="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hộp kiếng 6 cái"
                    android:textSize="8dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/quicksand_bold"
                    android:textColor="@color/neutral_4"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BƯỚC 4: CHỌN CHEESE"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/neutral_4"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Trở về"
            android:drawableLeft="@drawable/back"
            android:textColor="@color/white"
            android:backgroundTint="@color/secondary_5"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Tiếp"
            android:drawableRight="@drawable/next"
            android:textColor="@color/white"
            android:backgroundTint="@color/secondary_5"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#E3E4E5"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="25dp"
            android:layout_height="25dp">

            <ImageView
                android:id="@+id/imv_ChooseSize"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/chosensize"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/imv_ChoosenCream"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_column="1"
                android:src="@drawable/chosencream" />

            <ImageView
                android:id="@+id/imv_ChoosenDip"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/chosendip"
                android:layout_column="2"/>
            <ImageView
                android:id="@+id/imv_ChoosenCheese"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/chosencheese"
                android:layout_column="3"/>
            <ImageView
                android:id="@+id/imv_Packaging"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/chosenpackage"
                android:layout_column="4"/>
        </TableRow>
    </TableLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#E3E4E5"/>

</LinearLayout>