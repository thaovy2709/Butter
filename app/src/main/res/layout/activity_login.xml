<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/txt_Skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:fontFamily="@font/quicksand_medium"
        android:gravity="end"
        android:text="Bỏ qua"
        android:textColor="@color/neutral_4"
        android:textSize="16dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="327dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bannerchaomung" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="BUTTER XIN CHÀO"
        android:textColor="@color/neutral_5"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/login_background"
            android:drawableLeft="@drawable/iconnation"
            android:ems="10"
            android:fontFamily="@font/quicksand_regular"
            android:hint=" +84 | Nhập số điện thoại"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingStart="15dp"
            android:textColor="@color/neutral_3"
            android:textSize="16dp" />

    </LinearLayout>


    <Button
        android:id="@+id/btn_login"
        android:layout_width="150dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/item_buttonorder_checkout"
        android:fontFamily="@font/quicksand_bold"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:weightSum="12">

        <View
            android:layout_width="133dp"
            android:layout_height="1dp"
            android:layout_weight="3"
            android:background="@color/neutral_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:fontFamily="@font/quicksand_bold"
            android:text="HOẶC"
            android:textAlignment="center"
            android:textColor="@color/neutral_4"
            android:textSize="16dp" />

        <View
            android:layout_width="133dp"
            android:layout_height="1dp"
            android:layout_weight="3"
            android:background="@color/neutral_2" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_loginFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4267B2"
        android:drawableLeft="@drawable/icon_facebook"
        android:fontFamily="@font/quicksand_regular"
        android:text="Tiếp tục bằng Facebook"
        android:textAllCaps="false"
        android:textSize="16dp" />

    <Button
        android:id="@+id/btn_loginGG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E3E4E5"
        android:drawableLeft="@drawable/google__g__logo_svg"
        android:fontFamily="@font/quicksand_regular"
        android:text="Tiếp tục bằng Google"
        android:textAllCaps="false"
        android:textColor="@color/neutral_5"
        android:textSize="16dp" />

</LinearLayout>