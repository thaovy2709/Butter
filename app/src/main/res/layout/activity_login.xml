<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txt_Skip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:text="Bỏ qua"
        android:textColor="@color/neutral_4"
        android:textSize="16dp"
        android:fontFamily="@font/quicksand_medium"
        android:layout_marginEnd="16dp"
        android:gravity="end"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="48dp">

        <ImageView
            android:layout_width="327dp"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bannerchaomung" />
    </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="BUTTER XIN CHÀO"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="20dp"
            android:textColor="@color/neutral_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/edt_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint=" +84 | Nhập số điện thoại"
            android:inputType="phone"
            android:textSize="16dp"
            android:maxLength="11"
            android:ems="10"
            android:paddingStart="15dp"
            android:drawableLeft="@drawable/iconnation"
            android:fontFamily="@font/quicksand_regular"
            android:textColor="@color/neutral_3"
            android:background="@drawable/login_background"/>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/secondary_4"
        android:layout_gravity="center"
        android:text="Đăng nhập"
        android:textSize="16dp"
        android:textAllCaps="false"
        app:cornerRadius="10dp"
        android:fontFamily="@font/quicksand_bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:weightSum="12">
        
        <View
            android:layout_width="133dp"
            android:layout_height="1dp"
            android:layout_weight="3"
            android:background="@color/neutral_2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textAlignment="center"
            android:text="HOẶC"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand_bold"
            android:textColor="@color/neutral_4"/>
        <View
            android:layout_width="133dp"
            android:layout_height="1dp"
            android:layout_weight="3"
            android:background="@color/neutral_2"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_loginFB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4267B2"
        android:text="Tiếp tục bằng Facebook"
        android:drawableLeft="@drawable/icon_facebook"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:fontFamily="@font/quicksand_regular"/>

    <Button
        android:id="@+id/btn_loginGG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#E3E4E5"
        android:text="Tiếp tục bằng Google"
        android:drawableLeft="@drawable/google__g__logo_svg"
        android:textAllCaps="false"
        android:fontFamily="@font/quicksand_regular"
        android:textSize="16dp"
        android:textColor="@color/neutral_5"/>

</LinearLayout>