<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_order_reasoncancel">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_cancelDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Lý do hủy đơn hàng"
            android:textColor="@color/neutral_5"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/closedialogcancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="352dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/close" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RadioGroup
        android:id="@+id/rg_cancelorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <RadioButton
            android:id="@+id/rad_reason1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thời gian giao hàng quá lâu"
            android:layoutDirection="rtl"
            android:fontFamily="@font/quicksand_semibold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/neutral_5"/>

        <RadioButton
            android:id="@+id/rad_reason2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thay đổi ý"
            android:layoutDirection="rtl"
            android:fontFamily="@font/quicksand_semibold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/neutral_5"/>

        <RadioButton
            android:id="@+id/rad_reason3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muốn xóa/thêm sản phẩm"
            android:layoutDirection="rtl"
            android:fontFamily="@font/quicksand_semibold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/neutral_5"/>

        <RadioButton
            android:id="@+id/rad_reason4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thay đổi địa chỉ giao hàng"
            android:layoutDirection="rtl"
            android:fontFamily="@font/quicksand_semibold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/neutral_5"/>

    </RadioGroup>

    <Button
        android:id="@+id/btn_confirmCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Gửi yêu cầu"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:background="@drawable/item_checkouttag"/>

</LinearLayout>