<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="8dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/dailycookie"
                android:scaleType="centerCrop"
                android:id="@+id/imv_item"/>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_name"
                android:text="@string/product1_name"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="14sp"
                android:textColor="@color/neutral_5"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_price"
                    android:text="@string/product1_price"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_oldPrice"
                    android:text="@string/product1_oldPrice"
                    android:fontFamily="@font/quicksand_medium"
                    android:textSize="14sp"
                    android:textColor="@color/neutral_4"
                    android:layout_marginStart="8dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="84dp"
                android:layout_height="25dp"
                android:id="@+id/txt_promotionTag"
                android:text="@string/product_promotion"
                android:fontFamily="@font/quicksand_medium"
                android:textSize="12sp"
                android:textColor="@color/neutral_1"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/item_checkouttag"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imv_trash"
                android:src="@drawable/trash"
                android:layout_gravity="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="32dp"
                android:gravity="end">

                <ImageView
                    android:id="@+id/imv_remove"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/removebutton"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txt_productQuantity"
                    android:text="2"
                    android:textSize="14sp"
                    android:fontFamily="@font/quicksand_semibold"
                    android:textColor="@color/neutral_5"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"/>

                <ImageView
                    android:id="@+id/imv_add"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/addbutton"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>