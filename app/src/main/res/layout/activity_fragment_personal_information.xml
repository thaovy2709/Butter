<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentPersonalInformation"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvBackFromPersonalInfToProfileScreen"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/back" />

        <TextView
            android:id="@+id/txtVoucherDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="THÔNG TIN TÀI KHOẢN"
            android:textColor="@color/neutral_5"
            android:textSize="20sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:src="@drawable/userheader"
        android:layout_marginTop="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Tên"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/fragment_personalinfbg">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Huỳnh Phạm Thủy Tiên"
            android:padding="8dp"
            android:textColor="@color/neutral_4"
            android:textSize="14sp"
            android:fontFamily="@font/quicksand_regular"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Số điện thoại"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/fragment_personalinfbg">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="0972 922 814"
            android:padding="8dp"
            android:textColor="@color/neutral_4"
            android:textSize="14sp"
            android:fontFamily="@font/quicksand_regular"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Giới tính"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"/>

    <RadioGroup
        android:id="@+id/radg_GioiTinhGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rad_GioiTinhNam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nam"
            android:textSize="14sp"
            android:buttonTint="@color/neutral_5"
            android:fontFamily="@font/quicksand_bold"/>

        <RadioButton
            android:id="@+id/GioiTinhNu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Nữ"
            android:checked="true"
            android:textSize="14sp"
            android:buttonTint="@color/neutral_5"
            android:fontFamily="@font/quicksand_bold"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ngày sinh"
        android:fontFamily="@font/quicksand_bold"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/fragment_personalinfbg"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_date" />

        <EditText
            android:id="@+id/edt_ChonNgaySinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="4dp"
            android:hint="22/03/2000"
            android:textColor="@color/neutral_4"
            android:textSize="14sp"
            android:fontFamily="@font/quicksand_regular"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_UpdateProfile"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Cập nhật"
        android:textSize="16dp"
        android:textColor="@color/neutral_5"
        android:textAllCaps="false"
        android:background="@drawable/item_homepage_butterid"
        android:fontFamily="@font/quicksand_bold"/>

</LinearLayout>