<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPVerifyFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_OTPTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_bold"
            android:text="Xác nhận mã OTP"
            android:layout_marginLeft="80dp"
            android:textColor="@color/neutral_5"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/imv_thoat"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="60dp"
            android:src="@drawable/ic_close"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_1"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_codetitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:padding="8dp"
            android:text="Mã xác thực gồm 6 số đã gửi đến số điện thoại"
            android:textAlignment="center"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_Mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="16dp"
            android:textColor="@color/secondary_4"
            android:layout_gravity="center"
            android:padding="8dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/txt_codetitle2"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mã để tiếp tục"
        android:fontFamily="@font/quicksand_regular"
        android:textSize="16dp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/edt_Code1"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/fragment_otpverifybg"
            android:focusable="true"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_regular"
            android:inputType="number"/>
        <EditText
            android:id="@+id/edt_Code2"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/fragment_otpverifybg"
            android:focusable="true"
            android:layout_marginLeft="24dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_regular"
            android:inputType="number"/>
        <EditText
            android:id="@+id/edt_Code3"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/fragment_otpverifybg"
            android:focusable="true"
            android:layout_marginLeft="24dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_regular"
            android:inputType="number"/>
        <EditText
            android:id="@+id/edt_Code4"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/fragment_otpverifybg"
            android:focusable="true"
            android:layout_marginLeft="24dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_regular"
            android:inputType="number"/>
        <EditText
            android:id="@+id/edt_Code5"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/fragment_otpverifybg"
            android:focusable="true"
            android:layout_marginLeft="24dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_regular"
            android:inputType="number"/>
        <EditText
            android:id="@+id/edt_Code6"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:background="@drawable/fragment_otpverifybg"
            android:focusable="true"
            android:layout_marginLeft="24dp"
            android:maxLength="1"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/quicksand_regular"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirmOTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/secondary_4"
        android:text="Xác nhận OTP"
        android:fontFamily="@font/quicksand_bold"
        android:textAllCaps="false"
        android:textSize="16dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Bạn không nhận được tin nhắn?"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="16dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/txt_resendOTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Gửi lại mã OTP"
            android:textSize="16dp"
            android:fontFamily="@font/quicksand_regular"
            android:textColor="@color/secondary_4"/>

    </LinearLayout>

</LinearLayout>