<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentButterIDChooseCreme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingRight="12dp"
        android:paddingLeft="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/address"
            android:layout_marginEnd="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giao hàng tới:"
                android:textSize="8sp"
                android:textColor="@color/neutral_4"
                android:fontFamily="@font/quicksand_bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trường Đại học Kinh tế - Luật"
                android:textColor="@color/neutral_5"
                android:textSize="10sp"
                android:fontFamily="@font/quicksand_bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <ImageView
                android:id="@+id/imv_Search"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/search"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imv_Wishlist"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/love"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imv_Notification1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notification"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/imv_Profile1"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/userheader"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#E3E4E5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SÁNG TẠO BUTTER CỦA RIÊNG BẠN"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="14dp"
        android:textColor="@color/secondary_5"/>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/hello"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:layout_width="408dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:src="@drawable/groupkem"
            android:layout_marginTop="8dp"/>

        <ImageView
            android:id="@+id/imv_Cookie"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:foregroundGravity="center"
            android:src="@drawable/cookie"
            android:layout_marginTop="24dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hãy chọn vị kem bạn yêu thích"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="16dp"
        android:gravity="center"
        android:textColor="@color/neutral_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:weightSum="16">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:id="@+id/ll_Vani"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imv_Vani"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/vanilla" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vani"
                android:textSize="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/neutral_4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:id="@+id/ll_Matcha"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/imv_Matcha"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/matcha" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matcha"
                android:textSize="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/neutral_4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:id="@+id/ll_Chocolate">

            <ImageView
                android:id="@+id/imv_Chocolate"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/chocolate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chocolate"
                android:textSize="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/neutral_4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:id="@+id/ll_Strawberry">

            <ImageView
                android:id="@+id/imv_Strawberry"
                android:layout_width="55dp"
                android:layout_height="52dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/strawberry" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strawberry"
                android:textSize="10dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@color/neutral_4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            android:id="@+id/ll_Sprinkles">

            <ImageView
                android:id="@+id/imv_Sprinkles"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/sprinkles"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Sprinkles"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="10dp"
                android:textColor="@color/neutral_4"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BƯỚC 2: CHỌN VỊ KEM"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/neutral_4"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="112dp"
            android:layout_height="34dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="32dp"
            android:text="TRỞ VỀ"
            android:background="@drawable/item_checkouttag"
            android:textColor="@color/neutral_1"
            android:drawableTint="@color/neutral_1"
            android:drawableLeft="@drawable/back"
            android:fontFamily="@font/quicksand_bold"
            android:padding="8dp"/>

        <Button
            android:id="@+id/btn_Next"
            android:layout_width="112dp"
            android:layout_height="34dp"
            app:cornerRadius="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="130dp"
            android:drawableRight="@drawable/next"
            android:background="@drawable/item_butterid"
            android:textColor="@color/neutral_1"
            android:drawableTint="@color/neutral_1"
            android:fontFamily="@font/quicksand_bold"
            android:text="TIẾP"
            android:padding="8dp"
            android:drawableEnd="@drawable/next"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="#E3E4E5"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="25dp"
            android:layout_height="25dp">

            <ImageView
                android:id="@+id/imv_ChooseSize"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/chosensize"
                android:layout_column="0" />

            <ImageView
                android:id="@+id/imv_ChoosenCream"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_column="1"
                android:src="@drawable/chosencream" />

            <ImageView
                android:id="@+id/imv_ChooseDip"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/dip"
                android:layout_column="2"/>
            <ImageView
                android:id="@+id/imv_ChooseCheese"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/cheese"
                android:layout_column="3"/>
            <ImageView
                android:id="@+id/imv_Packaging"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/packaging"
                android:layout_column="4"/>
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#E3E4E5"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            app:itemIconTint="@color/color_menu_nav"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            app:itemTextAppearanceActive="@style/MyBottomNavigationView.TextAppearance"
            app:itemTextAppearanceInactive="@style/MyBottomNavigationView.TextAppearance"
            app:itemTextColor="@color/color_menu_nav"
            app:menu="@menu/menunavigation" />

    </RelativeLayout>

</LinearLayout>