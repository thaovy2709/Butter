<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="360dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/secondary_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xác nhận"
        android:fontFamily="@font/quicksand_bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/txt_RedeemOfferConfirmationContext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="Bạn muốn đổi ưu đãi này?"
        android:fontFamily="@font/quicksand_medium"
        android:textColor="@color/neutral_4"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_HuyXacNhanOffer"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:background="@drawable/item_cancel_success"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="@color/neutral_5"
            android:textSize="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"/>

        <Button
            android:id="@+id/btn_XacNhanOffer"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/item_homepage_butterid"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="@color/neutral_5"
            android:textSize="16dp"
            android:layout_gravity="center"/>
    </LinearLayout>

    <ImageView
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:src="@drawable/hello"
        android:layout_marginBottom="16dp"/>
</LinearLayout>