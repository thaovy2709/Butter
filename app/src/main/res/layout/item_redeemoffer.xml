<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/activity_promotionscreenbg"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="10dp"
        android:layout_marginLeft="8dp"
        app:cardBackgroundColor="#FFFFFF">

        <ImageView
            android:id="@+id/imv_OfferThumb"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/saigoncentre" />
    </androidx.cardview.widget.CardView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Butter"
            android:fontFamily="@font/quicksand_bold"
            android:textSize="14sp"
            android:textColor="@color/neutral_4"/>

        <TextView
            android:id="@+id/txt_OfferInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Info"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="8dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="3dp"
                android:src="@drawable/cookies"/>

            <TextView
                android:id="@+id/txt_OfferPoint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="Point"
                android:textColor="@color/primary_4"
                android:textSize="12sp"/>

            <Button
                android:id="@+id/btn_DoiNgay"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/item_homepage_butterid"
                android:fontFamily="@font/quicksand_bold"
                android:gravity="center"
                android:text="Đổi ngay"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="12sp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>